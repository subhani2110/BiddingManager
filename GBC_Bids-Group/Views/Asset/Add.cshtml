@model GBC_Bids_Group.ViewModels.AddAssetViewModel
@{
    ViewData["Title"] = "Add Asset";
}
<div class="container">
    <h3 class="text-center">Create a new asset</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Add" asp-controller="Asset" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="productName">Product Name:</label>
                            <input asp-for="Name" class="form-control" id="productName" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="productDescription">Product Description:</label>
                            <textarea asp-for="Description" class="form-control" id="productDescription" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="minimumBid">Minimum Bid:</label>
                            <input asp-for="MinimumBid" type="number" step="0.01" class="form-control" id="minimumBid" required>
                            <span asp-validation-for="MinimumBid" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="startDate">Starting Date:</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control" id="startDate" required>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="endDate">Closing Date:</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control" id="endDate" required>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="condition">Condition:</label>
                            <select asp-for="Condition" class="form-control" id="condition" required>
                                <option value="">-- Select a condition --</option>
                                <option value="New">New</option>
                                <option value="Used - Like New">Used - Like New</option>
                                <option value="Used - Good">Used - Good</option>
                                <option value="Used - Fair">Used - Fair</option>
                            </select>
                            <span asp-validation-for="Condition" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="category">Category:</label>
                            <input asp-for="Category" class="form-control" id="category" required>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="imageFile">Image Upload:</label>
                            <input asp-for="ImageUrl" type="file" class="form-control-file mx-2" id="imageFile" required>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/jquery-validate/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}